{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<div class="nadpis">
    <h1 class="center">Event</h1>
</div>
<div class="tabulka">
    <table class="content-table">
        <tbody>
            <tr>
                <th>Název</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Místo</th>
                <td class="active-row">{{ event.place }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td class="active-row">{{ event.date ? event.date|date('H:i d.m. Y') : '' }}</td>
            </tr>
            <tr>
                <th>Popisek</th>
                <td>{{ event.description }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="_show">
<div class="active">
	<a href="{{ path('event_join', {'id': event.id}) }}">Připojit se k akci!</a>
	</div>
    <div class="active">
	<a href="{{ path('event_leave', {'id': event.id}) }}">Zrušit účast!</a>
	</div>
    <br>
	<a href="{{ path('homepage_default') }}">Zpět na přehled</a>
</div>

{% endblock %}
